---
import '../styles/global.css';
---

<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Richard Flamenco — Guitare flamenca à Montpellier. Artiste, compositeur et enseignant passionné." />
  <title>Richard Flamenco — Guitare Flamenca</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;0,800;1,400;1,600;1,700&display=swap" rel="stylesheet" />
</head>
<body class="bg-negro-950 text-white">

  <!-- ========== HEADER ========== -->
  <header class="fixed top-0 left-0 right-0 z-50 transition-all" id="site-header">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-20">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2.5 group">
          <img src="/images/logo-original.png" alt="" class="w-11 h-11 object-contain p-1.5 bg-white rounded-full shadow-lg shadow-white/10 transition-transform group-hover:scale-110" />
          <span class="font-heading text-base sm:text-lg font-semibold italic text-white leading-tight">Richard<br/><span class="text-flamenco-400 font-normal text-sm sm:text-base">Flamenco</span></span>
        </a>

        <!-- Desktop Nav -->
        <nav class="hidden md:flex items-center gap-1">
          <a href="#artiste" class="px-4 py-2 text-sm font-medium text-white/70 hover:text-white transition-colors">L'Artiste</a>
          <a href="#musique" class="px-4 py-2 text-sm font-medium text-white/70 hover:text-white transition-colors">Musique</a>
          <a href="#cours" class="px-4 py-2 text-sm font-medium text-white/70 hover:text-white transition-colors">Cours</a>
          <a href="#spectacles" class="px-4 py-2 text-sm font-medium text-white/70 hover:text-white transition-colors">Spectacles</a>
          <a href="#contact" class="ml-3 px-6 py-2.5 bg-rojo-600 hover:bg-rojo-700 text-white text-sm font-semibold rounded-full transition-all hover:shadow-lg hover:shadow-rojo-600/30">Contact</a>
        </nav>

        <!-- Right side: Music + Language + Mobile menu -->
        <div class="flex items-center gap-3">
          <!-- Music Player -->
          <div id="music-player" class="flex items-center gap-2">
            <button id="music-toggle" class="group w-10 h-10 bg-white/[0.06] border border-white/10 rounded-full flex items-center justify-center hover:border-flamenco-500/40 hover:bg-white/10 transition-all">
              <svg id="music-play-icon" class="w-4 h-4 text-flamenco-400 ml-0.5" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
              <svg id="music-pause-icon" class="w-4 h-4 text-flamenco-400 hidden" fill="currentColor" viewBox="0 0 24 24"><path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"/></svg>
            </button>
            <div id="music-bars" class="hidden items-end gap-[3px] h-4">
              <span class="w-[3px] bg-flamenco-400 rounded-full music-bar" style="height:40%"></span>
              <span class="w-[3px] bg-rojo-400 rounded-full music-bar" style="height:70%"></span>
              <span class="w-[3px] bg-flamenco-400 rounded-full music-bar" style="height:50%"></span>
              <span class="w-[3px] bg-rojo-400 rounded-full music-bar" style="height:85%"></span>
              <span class="w-[3px] bg-flamenco-400 rounded-full music-bar" style="height:30%"></span>
            </div>
            <span id="music-label" class="text-white/40 text-xs font-medium hidden sm:block">Ambrussum</span>
          </div>

          <span class="hidden md:block w-px h-5 bg-white/10"></span>

          <!-- Language -->
          <div class="hidden md:flex items-center gap-2">
            <button class="text-sm font-semibold text-white">FR</button>
            <span class="text-white/20">|</span>
            <button class="text-sm text-white/50 hover:text-white transition-colors">EN</button>
          </div>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-btn" class="md:hidden p-2 text-white/70 hover:text-white" aria-label="Menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-negro-950/95 backdrop-blur-lg border-t border-white/10">
      <div class="px-4 py-6 space-y-1">
        <a href="#artiste" class="block px-4 py-3 text-white/70 hover:text-white hover:bg-white/5 rounded-lg transition-colors">L'Artiste</a>
        <a href="#musique" class="block px-4 py-3 text-white/70 hover:text-white hover:bg-white/5 rounded-lg transition-colors">Musique</a>
        <a href="#cours" class="block px-4 py-3 text-white/70 hover:text-white hover:bg-white/5 rounded-lg transition-colors">Cours</a>
        <a href="#spectacles" class="block px-4 py-3 text-white/70 hover:text-white hover:bg-white/5 rounded-lg transition-colors">Spectacles</a>
        <a href="#contact" class="block px-4 py-3 bg-rojo-600 text-white text-center font-semibold rounded-lg mt-4">Contact</a>
        <div class="flex items-center gap-3 pt-4 border-t border-white/10 mt-4">
          <button class="text-sm font-semibold text-white">FR</button>
          <span class="text-white/20">|</span>
          <button class="text-sm text-white/50">EN</button>
        </div>
      </div>
    </div>
  </header>

  <!-- ========== HERO — FULL VIEWPORT ========== -->
  <section class="relative min-h-screen flex items-center overflow-hidden">
    <!-- Background layers -->
    <div class="absolute inset-0 bg-negro-950"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-rojo-950/80 via-negro-950 to-negro-950"></div>
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-flamenco-500/8 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-rojo-600/10 rounded-full blur-[100px]"></div>
    <!-- Subtle pattern overlay -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full pt-24 pb-16">
      <div class="flex flex-col lg:grid lg:grid-cols-5 lg:gap-8 items-center min-h-[70vh]">
        <!-- Text + Photo reordered for mobile -->
        <div class="lg:col-span-3 text-center lg:text-left w-full">
          <!-- Title -->
          <h1 class="font-heading text-5xl sm:text-6xl lg:text-7xl xl:text-8xl font-bold leading-[0.9] mb-8 hero-entrance-delay">
            <span class="text-white">El arte</span><br/>
            <span class="text-white">de la guitarra</span><br/>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-flamenco-400 via-rojo-400 to-flamenco-500 italic">flamenca</span>
          </h1>

          <!-- Photo — mobile only, right after title -->
          <div class="flex justify-center mb-10 lg:hidden hero-photo-entrance">
            <div class="relative">
              <div class="absolute -inset-8 bg-gradient-to-br from-flamenco-500/15 via-rojo-600/10 to-transparent rounded-3xl blur-2xl"></div>
              <div class="relative">
                <img src="/images/richard-hero.png" alt="Richard Flamenco" class="relative w-72 sm:w-80 rounded-3xl shadow-2xl shadow-negro-950/80 object-cover" />
                <div class="absolute -inset-1 rounded-3xl border border-white/10 pointer-events-none"></div>
                <div class="absolute -bottom-5 -right-5 bg-negro-900 border border-white/10 rounded-2xl px-5 py-3 backdrop-blur-sm">
                  <div class="text-white font-bold text-sm">30+ ans</div>
                  <div class="text-white/40 text-xs">de flamenco</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Subtitle -->
          <p class="text-white/50 text-lg md:text-xl leading-relaxed max-w-xl mx-auto lg:mx-0 mb-6 hero-entrance-delay-2">
            Guitariste, compositeur et enseignant depuis plus de 30 ans.
            Richard vit et transmet la passion du flamenco.
          </p>

          <!-- Location badge — under subtitle -->
          <div class="flex justify-center lg:justify-start mb-10 hero-entrance">
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/5 border border-white/10 rounded-full">
              <span class="w-2 h-2 bg-rojo-500 rounded-full animate-pulse"></span>
              <span class="text-white/60 text-sm">Montpellier & Dijon, France</span>
            </div>
          </div>

          <!-- Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start hero-entrance-delay-2">
            <a href="#musique" class="group px-8 py-4 bg-gradient-to-r from-rojo-600 to-rojo-700 hover:from-rojo-500 hover:to-rojo-600 text-white font-semibold rounded-full transition-all shadow-xl shadow-rojo-600/20 hover:shadow-rojo-500/30 flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
              Écouter
            </a>
            <a href="#contact" class="px-8 py-4 border border-white/15 hover:border-white/30 text-white font-medium rounded-full transition-all hover:bg-white/5 text-center">
              Prendre contact
            </a>
          </div>
        </div>

        <!-- Photo — desktop only (right side) -->
        <div class="lg:col-span-2 hidden lg:flex justify-end">
          <div class="relative hero-photo-entrance">
            <div class="absolute -inset-8 bg-gradient-to-br from-flamenco-500/15 via-rojo-600/10 to-transparent rounded-3xl blur-2xl"></div>
            <div class="relative">
              <img src="/images/richard-hero.png" alt="Richard Flamenco" class="relative w-[420px] rounded-3xl shadow-2xl shadow-negro-950/80 object-cover" />
              <div class="absolute -inset-1 rounded-3xl border border-white/10 pointer-events-none"></div>
              <div class="absolute -bottom-5 -right-5 bg-negro-900 border border-white/10 rounded-2xl px-5 py-3 backdrop-blur-sm">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 bg-gradient-to-br from-flamenco-500 to-rojo-600 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/></svg>
                  </div>
                  <div>
                    <div class="text-white font-bold text-sm">30+ ans</div>
                    <div class="text-white/40 text-xs">de flamenco</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-white/30">
        <span class="text-xs uppercase tracking-widest">Découvrir</span>
        <div class="w-px h-8 bg-gradient-to-b from-white/30 to-transparent animate-pulse"></div>
      </div>
    </div>
  </section>

  <!-- ========== L'ARTISTE ========== -->
  <section id="artiste" class="relative py-24 md:py-32">
    <!-- Split background -->
    <div class="absolute inset-0 bg-negro-950"></div>
    <div class="absolute inset-y-0 right-0 w-full lg:w-1/2 bg-gradient-to-l from-rojo-950/30 to-transparent"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-center">
        <!-- Left: Text -->
        <div class="reveal-left">
          <p class="text-flamenco-400 font-medium text-sm uppercase tracking-[0.2em] mb-6">L'Artiste</p>
          <h2 class="font-heading text-4xl md:text-5xl font-bold text-white leading-tight mb-8">
            Une vie au rythme<br/>
            <span class="italic text-transparent bg-clip-text bg-gradient-to-r from-flamenco-400 to-oro-400">du compás</span>
          </h2>
          <div class="space-y-5 text-white/60 text-lg leading-relaxed">
            <p>
              Passionné depuis l'enfance, Richard a fait de la guitare flamenca bien plus
              qu'un instrument — une manière de vivre. Plus de 30 ans de pratique, de
              scènes et de transmission.
            </p>
            <p>
              Ami de longue date de <span class="text-white/90 font-medium">Mikael Baliardo des Gipsy Kings</span>,
              il puise dans la tradition gitane et le flamenco pur pour créer un son
              authentique et vibrant.
            </p>
          </div>

          <!-- Stats -->
          <div class="grid grid-cols-3 gap-6 mt-12 pt-10 border-t border-white/10">
            <div>
              <div class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-flamenco-400 to-flamenco-500 font-heading">30+</div>
              <div class="text-white/40 text-sm mt-1">Années de<br/>flamenco</div>
            </div>
            <div>
              <div class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-rojo-400 to-rojo-500 font-heading">100+</div>
              <div class="text-white/40 text-sm mt-1">Concerts<br/>& spectacles</div>
            </div>
            <div>
              <div class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-oro-400 to-oro-500 font-heading">200+</div>
              <div class="text-white/40 text-sm mt-1">Élèves<br/>accompagnés</div>
            </div>
          </div>
        </div>

        <!-- Right: Image collage -->
        <div class="relative reveal-right">
          <div class="aspect-[4/5] rounded-3xl overflow-hidden">
            <img
              src="/images/richard-hero.png"
              alt="Richard Flamenco en concert"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-negro-950/80 via-transparent to-negro-950/20"></div>
          </div>
          <!-- Floating quote -->
          <div class="absolute bottom-6 left-6 right-6 bg-negro-950/80 backdrop-blur-md border border-white/10 rounded-2xl p-5">
            <p class="text-white/80 italic font-heading text-lg leading-relaxed">"Le flamenco, c'est l'âme qui parle à travers les cordes."</p>
            <p class="text-flamenco-400 text-sm mt-2 font-medium">— Richard</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ========== MUSIQUE / COMPOSITIONS ========== -->
  <section id="musique" class="relative py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-negro-950 via-negro-900 to-negro-950"></div>
    <!-- Decorative warm glow -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-flamenco-600/5 rounded-full blur-[150px]"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-20 reveal">
        <p class="text-flamenco-400 font-medium text-sm uppercase tracking-[0.2em] mb-6">Compositions</p>
        <h2 class="font-heading text-4xl md:text-5xl font-bold text-white leading-tight mb-6">
          Écouter le <span class="italic text-transparent bg-clip-text bg-gradient-to-r from-rojo-400 to-flamenco-400">Duende</span>
        </h2>
        <p class="text-white/50 text-lg">Bulería, Rumba, Tangos — les compositions de Richard capturent l'essence brute du flamenco.</p>
      </div>

      <!-- Featured Video -->
      <div class="max-w-5xl mx-auto mb-16 reveal-scale">
        <div class="relative aspect-video bg-negro-800 rounded-3xl overflow-hidden group cursor-pointer border border-white/5">
          <img src="/images/richard-hero.png" alt="" class="absolute inset-0 w-full h-full object-cover opacity-40 group-hover:opacity-50 transition-opacity scale-105 group-hover:scale-100 transition-transform duration-700" />
          <div class="absolute inset-0 bg-gradient-to-t from-negro-950 via-negro-950/50 to-negro-950/30"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="w-24 h-24 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full flex items-center justify-center group-hover:bg-rojo-600 group-hover:border-rojo-600 group-hover:scale-110 transition-all duration-300 shadow-2xl">
              <svg class="w-10 h-10 text-white ml-1" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
            </div>
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-8">
            <p class="text-white/40 text-sm uppercase tracking-wider mb-2">Session Studio 2025</p>
            <p class="text-white font-heading text-2xl font-semibold">Rumba y Bulería</p>
          </div>
        </div>
      </div>

      <!-- Video Thumbnails -->
      <div class="grid sm:grid-cols-3 gap-6 max-w-5xl mx-auto reveal-stagger">
        <div class="group cursor-pointer">
          <div class="relative aspect-video bg-negro-800 rounded-2xl overflow-hidden border border-white/5 mb-3">
            <div class="absolute inset-0 bg-gradient-to-t from-negro-950/80 to-transparent"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="w-14 h-14 bg-white/10 rounded-full flex items-center justify-center group-hover:bg-rojo-600/80 transition-all">
                <svg class="w-6 h-6 text-white ml-0.5" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
              </div>
            </div>
          </div>
          <p class="text-white/80 font-medium text-sm group-hover:text-flamenco-400 transition-colors">Por Bulerias</p>
          <p class="text-white/30 text-xs mt-0.5">Session studio</p>
        </div>
        <div class="group cursor-pointer">
          <div class="relative aspect-video bg-negro-800 rounded-2xl overflow-hidden border border-white/5 mb-3">
            <div class="absolute inset-0 bg-gradient-to-t from-negro-950/80 to-transparent"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="w-14 h-14 bg-white/10 rounded-full flex items-center justify-center group-hover:bg-rojo-600/80 transition-all">
                <svg class="w-6 h-6 text-white ml-0.5" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
              </div>
            </div>
          </div>
          <p class="text-white/80 font-medium text-sm group-hover:text-flamenco-400 transition-colors">Festival de Poésie</p>
          <p class="text-white/30 text-xs mt-0.5">St-Guilhem-le-Désert</p>
        </div>
        <div class="group cursor-pointer">
          <div class="relative aspect-video bg-negro-800 rounded-2xl overflow-hidden border border-white/5 mb-3">
            <div class="absolute inset-0 bg-gradient-to-t from-negro-950/80 to-transparent"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="w-14 h-14 bg-white/10 rounded-full flex items-center justify-center group-hover:bg-rojo-600/80 transition-all">
                <svg class="w-6 h-6 text-white ml-0.5" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
              </div>
            </div>
          </div>
          <p class="text-white/80 font-medium text-sm group-hover:text-flamenco-400 transition-colors">Concert Duo</p>
          <p class="text-white/30 text-xs mt-0.5">Avec Jess</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ========== COURS — WARM SECTION ========== -->
  <section id="cours" class="relative py-24 md:py-32">
    <div class="absolute inset-0 bg-gradient-to-b from-negro-950 to-negro-900"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        <!-- Left: Intro -->
        <div class="lg:sticky lg:top-32 reveal-left">
          <p class="text-flamenco-400 font-medium text-sm uppercase tracking-[0.2em] mb-6">Enseignement</p>
          <h2 class="font-heading text-4xl md:text-5xl font-bold text-white leading-tight mb-6">
            Apprendre le<br/>
            <span class="italic text-transparent bg-clip-text bg-gradient-to-r from-flamenco-400 to-rojo-400">Flamenco</span>
          </h2>
          <p class="text-white/50 text-lg leading-relaxed mb-8">
            Du débutant au professionnel, Richard transmet son savoir avec la même
            passion depuis plus de 30 ans à Montpellier.
          </p>
          <a href="#contact" class="inline-flex items-center gap-2 px-7 py-3.5 bg-gradient-to-r from-rojo-600 to-rojo-700 text-white font-semibold rounded-full hover:shadow-lg hover:shadow-rojo-600/25 transition-all">
            Réserver un cours d'essai
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
          </a>
        </div>

        <!-- Right: Cards -->
        <div class="space-y-5 reveal-stagger">
          <!-- Individual -->
          <div class="group bg-white/[0.03] border border-white/[0.06] rounded-2xl p-7 hover:bg-white/[0.06] hover:border-flamenco-500/30 transition-all duration-300">
            <div class="flex items-start gap-5">
              <div class="w-14 h-14 bg-gradient-to-br from-flamenco-500/20 to-flamenco-600/10 rounded-2xl flex items-center justify-center shrink-0 border border-flamenco-500/10">
                <svg class="w-6 h-6 text-flamenco-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
              </div>
              <div>
